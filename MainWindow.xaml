<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="EngrLink.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EngrLink"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="EngrLink">

    <Grid>
        <TextBox Name="NameTextBox" Width="300" Height="30" Margin="20,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" PlaceholderText="Enter Name"/>
        <TextBox Name="AddressTextBox" Width="300" Height="30" Margin="20,70,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" PlaceholderText="Enter Address"/>
        <TextBox Name="ContactTextBox" Width="300" Height="30" Margin="20,120,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" PlaceholderText="Enter Contact Number"/>
        <TextBox Name="ProgramTextBox" Width="300" Height="30" Margin="20,170,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" PlaceholderText="Enter Program"/>
        <DatePicker Name="BirthdayDatePicker" Margin="20,220,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Name="SubmitButton" Content="Submit" Width="100" Height="40" Margin="20,270,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="SubmitButton_Click"/>
    </Grid>

</Window>
