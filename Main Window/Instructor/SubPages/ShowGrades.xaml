<Page
    x:Class="EngrLink.Main_Window.Instructor.SubPages.ShowGrades"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EngrLink.Main_Window.Instructor.SubPages"
    xmlns:models="using:EngrLink.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Light">
    <ScrollView>
        <Grid Padding="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Stretch" Spacing="1">
                <Border BorderThickness="1" BorderBrush="Gray" Padding="10" CornerRadius="8" Background="#fafafa" Margin="0,20,0,0">
                    <StackPanel Margin="0,30,0,30" Background="#f9f9f9" Padding="20" CornerRadius="10">
                        <TextBlock Text="{Binding StudentProfile.Name}" FontSize="24" FontWeight="Bold" />
                        <TextBlock Text="{Binding StudentProfile.Program}" FontSize="18" />
                        <TextBlock Text="{Binding StudentProfile.Year}" FontSize="18" />
                        <TextBlock Text="GWA:" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding StudentProfile.GWA}" FontSize="18" />
                    </StackPanel>
                </Border>
                <TextBlock Text="Grades" FontSize="40" HorizontalAlignment="Center" Padding="0,50,0,50"/>
                <ListView x:Name="StudentsListView" IsItemClickEnabled="False">
                    <ListView.Header>
                        <Grid Padding="5" Background="#f0f0f0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="    Code" FontWeight="Bold" Grid.Column="0" HorizontalAlignment="Left"/>
                            <TextBlock Text="    Subject Name" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Left"/>
                            <TextBlock Text="    Units" Grid.Column="2" FontWeight="Bold" HorizontalAlignment="Left"/>
                            <TextBlock Text="    Grade" Grid.Column="3" FontWeight="Bold" HorizontalAlignment="Left"/>
                            <TextBlock Text="    Remarks" Grid.Column="4" FontWeight="Bold" HorizontalAlignment="Left"/>
                        </Grid>
                    </ListView.Header>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:IndivSubjectView">
                            <Grid Padding="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="300"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Bind Sub.Code}" Grid.Column="0" HorizontalAlignment="Left"/>
                                <TextBlock Text="{x:Bind Sub.Subject}" Grid.Column="1" HorizontalAlignment="Left"/>
                                <TextBlock Text="{x:Bind Sub.Units}" Grid.Column="2" HorizontalAlignment="Left"/>
                                <TextBox Text="{x:Bind Sub.Grade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" HorizontalAlignment="Left"/>
                                <TextBlock Text="{x:Bind RemarksText}" Grid.Column="4" HorizontalAlignment="Left"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button x:Name="SubmitButton" Content="Submit" Width="300" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="SubmitButton_Click" FontSize="14" FontFamily="Verdana" Margin="5" Padding="10" Foreground="#74441e"/>
            </StackPanel>
        </Grid>
    </ScrollView>
</Page>
