<Page
    x:Class="EngrLink.Main_Window.Instructor.SubPages.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EngrLink.Main_Window.Instructor.SubPages"
    xmlns:models="using:EngrLink.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <StackPanel>
            <TextBlock Text="Faculty Dashboard" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20" />

            <TextBlock Text="Announcements" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,10,0,10" />

            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400">
                <ListView ItemsSource="{Binding FacultyAnnouncements}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Announcement">
                            <Border Background="White" 
                                    CornerRadius="5" 
                                    Padding="10" 
                                    Margin="0,5,0,5" 
                                    BorderBrush="#FF964F" 
                                    BorderThickness="1">
                                <TextBlock Text="{x:Bind Announcements}" 
                                           FontSize="14" 
                                           TextWrapping="Wrap" />
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>