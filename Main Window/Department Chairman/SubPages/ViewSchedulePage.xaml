<Page
    x:Class="EngrLink.Main_Window.Department_Chairman.SubPages.ViewSchedulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EngrLink.Main_Window.Department_Chairman.SubPages"
    xmlns:models="using:EngrLink.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <StackPanel Spacing="20">
            <TextBlock 
                Text="{x:Bind Fac.Name}" 
                FontSize="30" 
                FontWeight="Bold" />
            
            <TextBlock 
                Text="Schedule Details" 
                FontSize="20" 
                FontWeight="SemiBold" />
            
            <ListView ItemsSource="{x:Bind Fac.ScheduleDetails}">
                <ListView.Header>
                    <Grid 
                        Background="#f0f0f0" 
                        Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Text="Time" 
                            FontWeight="Bold" />
                        <TextBlock 
                            Text="Subject" 
                            Grid.Column="1" 
                            FontWeight="Bold" />
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:ScheduleDetail">
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Text="{x:Bind Time}" />
                            <TextBlock 
                                Text="{x:Bind Subject}" 
                                Grid.Column="1" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <Button 
                Content="Back" 
                Click="BackButton_Click" 
                HorizontalAlignment="Left" />
        </StackPanel>
    </Grid>
</Page>
