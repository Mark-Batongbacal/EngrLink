<Page
    x:Class="EngrLink.Main_Window.Department_Chairman.SubPages.AnnouncementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EngrLink.Main_Window.Department_Chairman.SubPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:EngrLink.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Light">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <TextBlock Text="Announcements" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#FF964F" 
                   Margin="0,0,0,20" />

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnSpacing="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Create Announcement Section -->
            <StackPanel Grid.Column="0" Background="#FFF5F5F5" Padding="20" CornerRadius="10" BorderBrush="#FF964F" BorderThickness="1">
                <TextBlock Text="Create Announcement" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10" />
                <TextBox x:Name="AnnouncementContentTextBox" 
                         PlaceholderText="Enter announcement content" 
                         Margin="0,0,0,10" 
                         Height="100" 
                         TextWrapping="Wrap" />
                <CheckBox x:Name="ShowToStudentsCheckBox" 
                          Content="Show to Students" 
                          Margin="0,0,0,5" />
                <CheckBox x:Name="ShowToTeachersCheckBox" 
                          Content="Show to Teachers" 
                          Margin="0,0,0,10" />
                <Button Content="Post Announcement" 
                        Click="PostAnnouncementButton_Click" 
                        Background="#FF964F" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        CornerRadius="5" 
                        Padding="10,5" />
                <TextBlock x:Name="MessageTextBlock" 
                           Foreground="Red" 
                           Visibility="Collapsed" 
                           Margin="0,10,0,0" />
            </StackPanel>

            <!-- Existing Announcements Section -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Existing Announcements" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10" />
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              Background="#FFF5F5F5" 
                              Padding="10" 
                              CornerRadius="10" 
                              BorderBrush="#FF964F" 
                              BorderThickness="1" 
                              Height="400">
                    <ListView ItemsSource="{Binding Announcements}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Announcement">
                                <Border Background="White" 
                                        CornerRadius="5" 
                                        Padding="10" 
                                        Margin="0,5,0,5" 
                                        BorderBrush="#FF964F" 
                                        BorderThickness="1">
                                    <TextBlock Text="{x:Bind Announcements}" 
                                               FontSize="14" 
                                               TextWrapping="Wrap" />
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
