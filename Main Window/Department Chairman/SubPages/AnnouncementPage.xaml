     <Page
    x:Class="EngrLink.Main_Window.Department_Chairman.SubPages.AnnouncementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EngrLink.Main_Window.Department_Chairman.SubPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:EngrLink.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Light">

    <Grid Padding="20">
        <StackPanel Spacing="20">
            <TextBlock Text="Create Announcement" FontSize="24" FontWeight="Bold"/>

            <TextBox x:Name="AnnouncementContentTextBox"
                     PlaceholderText="Enter announcement content here..."
                     AcceptsReturn="True"
                     Height="200"
                     Width="400"/>

            <CheckBox x:Name="ShowToStudentsCheckBox" Content="Show to Students"/>
            <CheckBox x:Name="ShowToTeachersCheckBox" Content="Show to Teachers"/>

            <Button x:Name="PostAnnouncementButton"
                    Content="Post Announcement"
                    Click="PostAnnouncementButton_Click"
                    Width="200"/>

            <TextBlock x:Name="MessageTextBlock"
                       Text=""
                       Foreground="Red"
                       Visibility="Collapsed"/>

            <!-- ListView to show existing announcements -->
            <TextBlock Text="Existing Announcements" FontSize="20" FontWeight="Bold" Margin="0,20,0,0"/>
            <ListView>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Announcement">
                        <StackPanel Margin="0,10,0,10" Padding="10" Background="#FFEFEFEF" CornerRadius="8">
                            <TextBlock Text="{x:Bind Announcements}" FontSize="16" TextWrapping="WrapWholeWords"/>
                            <TextBlock Text="{x:Bind ForStud, Mode=OneWay}" FontStyle="Italic" Foreground="Gray" Visibility="{x:Bind ForStud, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="{x:Bind ForFac, Mode=OneWay}" FontStyle="Italic" Foreground="Gray" Visibility="{x:Bind ForFac, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
