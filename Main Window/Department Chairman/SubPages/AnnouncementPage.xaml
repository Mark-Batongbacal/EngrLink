<Page
    x:Class="EngrLink.Main_Window.Department_Chairman.SubPages.AnnouncementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EngrLink.Main_Window.Department_Chairman.SubPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Light">

    <Grid Padding="20">
        <StackPanel Spacing="20">
            <TextBlock Text="Create Announcement" FontSize="24" FontWeight="Bold"/>

            <TextBox x:Name="AnnouncementContentTextBox"
                     PlaceholderText="Enter announcement content here..."
                     AcceptsReturn="True"
                     Height="200"
                     Width="400"/>

            <CheckBox x:Name="ShowToStudentsCheckBox" Content="Show to Students"/>
            <CheckBox x:Name="ShowToTeachersCheckBox" Content="Show to Teachers"/>

            <Button x:Name="PostAnnouncementButton"
                    Content="Post Announcement"
                    Click="PostAnnouncementButton_Click"
                    Width="200"/>

            <TextBlock x:Name="MessageTextBlock"
                       Text=""
                       Foreground="Red"
                       Visibility="Collapsed"/>

            <TextBlock Text="Existing Announcements" FontSize="20" FontWeight="Bold" Margin="0,20,0,0"/>
            <ListView x:Name="AnnouncementsListView" ItemsSource="{x:Bind Announcements, Mode=OneWay}" IsItemClickEnabled="False">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:AnnouncementViewModel">
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{x:Bind Content}" TextWrapping="Wrap" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Students:" Visibility="{x:Bind ForStudentsVisibility}" />
                                <TextBlock Text="Teachers:" Visibility="{x:Bind ForTeachersVisibility}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </Grid>
</Page>
