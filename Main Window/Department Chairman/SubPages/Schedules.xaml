<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EngrLink.Main_Window.Department_Chairman.SubPages.Schedules"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:EngrLink.Main_Window.Department_Chairman.SubPages"
    xmlns:models="using:EngrLink.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Light">

    <Grid Padding="0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Stretch" Spacing="1">
            <TextBlock Text="Faculty Schedules" FontSize="40" HorizontalAlignment="Center" Padding="0,50,0,50"/>

            <ScrollViewer x:Name="SchedulesScrollViewer">
                <ListView x:Name="SchedulesListView" ItemsSource="{x:Bind FacultySchedules}" IsItemClickEnabled="False" Height="500">
                    <ListView.Header>
                        <Grid Padding="10" Background="#f0f0f0" CornerRadius="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Code" FontWeight="Bold" HorizontalAlignment="Left"/>
                            <TextBlock Text="Name" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Left"/>
                            <TextBlock Text="Action" Grid.Column="2" FontWeight="Bold" HorizontalAlignment="Left"/>
                        </Grid>
                    </ListView.Header>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Faculty">
                            <Grid Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="300"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Bind ProfCode}" HorizontalAlignment="Left"/>
                                <TextBlock Text="{x:Bind Name}" Grid.Column="1" HorizontalAlignment="Left"/>
                                <Button Content="View Schedule" Click="ViewScheduleButton_Click" Grid.Column="2" HorizontalAlignment="Left"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>