<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EngrLink.DepartmentChair.AnnouncementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EngrLink.DepartmentChair"
    xmlns:models="using:EngrLink.Models"
    xmlns:converters="using:EngrLink.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Department Announcements" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ListView x:Name="AnnouncementsListView" SelectionMode="Single" Margin="0,0,20,0" DoubleTapped="AnnouncementsListView_DoubleTapped">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Announcement">
                        <StackPanel Padding="10" BorderBrush="LightGray" BorderThickness="0,0,0,1">
                            <TextBlock Text="{x:Bind Title}" FontWeight="SemiBold" FontSize="16"/>
                            <TextBlock Text="{x:Bind CreatedAt, Converter={StaticResource DateTimeFormatConverter}}" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="{x:Bind Content}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <TextBlock x:Name="EmptyAnnouncementsTextBlock"
                       Grid.Column="0"
                       Text="No announcements yet."
                       FontStyle="Italic"
                       Foreground="Gray"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Visibility="Collapsed"/>

            <Button Grid.Column="1" Content="New Announcement" Click="NewAnnouncementButton_Click" VerticalAlignment="Top" Style="{StaticResource AccentButtonStyle}"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Back to Department Page" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>

    <Page.Resources>
        <converters:DateTimeToStringConverter x:Key="DateTimeFormatConverter" Format="yyyy-MM-dd HH:mm"/>
    </Page.Resources>
</Page>