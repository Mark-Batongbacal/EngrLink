<Page
    x:Class="EngrLink.EnrolleePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EngrLink"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <!-- StackPanel will organize the elements vertically -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="15">
            <!-- Name Field -->
            <TextBox x:Name="NameTextBox" PlaceholderText="Enter Name" TextChanged="Input_TextChanged" Width="300" Height="40" Padding="10"/>

            
            <TextBox x:Name="AddressTextBox" PlaceholderText="Enter Address" TextChanged="Input_TextChanged" Width="300" Height="40" Padding="10"/>

            <!-- Contact Field -->
            <TextBox x:Name="ContactTextBox" PlaceholderText="Enter Contact" TextChanged="Input_TextChanged" Width="300" Height="40" Padding="10"/>

            <!-- Program Field -->
            <TextBox x:Name="ProgramTextBox" PlaceholderText="Enter Program" TextChanged="Input_TextChanged" Width="300" Height="40" Padding="10"/>

            <!-- Birthday Picker -->
            <DatePicker x:Name="BirthdayDatePicker" DateChanged="Input_DateChanged" Width="300" Height="40"/>

            <!-- Submit Button -->
            <Button Name="SubmitButton" Content="Submit" Width="100" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
